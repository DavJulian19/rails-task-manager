<%= form_with model: task do |t| %>
  <%= t.label :title, class: "form-label fw-bold" %>
  <%= t.text_field :title, class: "form-control mb-3"%>
  <%= t.label :details, class: "form-label fw-bold" %>
  <%= t.text_field :details, class: "form-control mb-3" %>
  <% if task.new_record? %>
    <%= t.submit 'Create Task', class: "btn btn-primary" %>
  <% else %>
    <div class="d-flex flex-column">
      <div>
        <%= t.label :completed, class: "form-label" %>
        <%= t.check_box :completed, class: "checkbox" %>
      </div>
      <%= t.submit 'Update Task', class: "btn btn-primary col-3" %>
    </div>
  <% end %>
<% end %>
